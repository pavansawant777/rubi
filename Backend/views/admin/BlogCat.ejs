<%-include('header.ejs')%>
<div class="container">
    <div class="row p-5 justify-content-center align-item-center">
<div class="col-md-5 rounded shadow bg-light p-4">
    <h3 class="text-center">Add Blog Category</h3>
    <form action="/admin/add-blog-cat" method="post">


    <input type="text" class="form-control mt-5" name="category" required/>
    <button class="btn btn-primary mt-5 w-100" type="submit">Save</button>
</form>
</div>
    </div>
    <div class="row p-5">
        <h3 class="mb-4">Category List</h3>
        <div class="col-md-12">
<table class="table table-bordered table-striped">
    <tr>
        <th></th>
        <th>Category</th>
        <th>Total Blogs</th>
    </tr>
    <%for(let i of cats){%>
    <tr>
        <td><a href="/admin/delete-blog-cat/<%-i._id%>" class="text-danger"><i class="fa fa-trash"></i></a></td>
        <td>
            <form action="/admin/update-blog-cat/<%-i._id%>" method="post">
                <div class="input-group">
                    <input type="text" value="<%-i.category%>" name="category" required class="form-control">
                    <button class="btn btn-primary" type="submit"><i class="fa fa-upload"></i></button>
                </div>
            </form>


        </td>
        <td>
            <%-i.blog_count%>
        </td>
    </tr>
    
        <%}%>
</table>
        </div>
    </div>
</div>
<%-include('footer.ejs')%>