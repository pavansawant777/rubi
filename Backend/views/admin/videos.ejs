<%-include('header.ejs')%>
<div class="container p-5">
    <div class="row align-item-center p-5 justify-content-center">
        <div class="col-5 p-4 rounded-4 shadow">
            <h2 class="text-center mb-5">Add Videos</h2>
            <form method="post" action="/admin/save-video">

          
            <label class="mb-2">Video Link</label>
            <input type="url" name="link" required class="form-control mb-3"/>
  <label class="mb-2">Show About</label>
  <select class="form-control" name="showAbout" required>
    <option value="false">Hide</option>
    <option value="true">Show</option>
  </select> 
  <div class="w-100 text-center">
    <button class="btn btn-primary mt-5" type="submit">Save</button>
</form>
  </div>
        </div>
        <div class="row mt-5 p-5">
            <div class="col-12" style="overflow-x: scroll;">
             <table class="table table-striped table-bordered">
                <tr>
                    <th></th>
                    <th>Srno</th>
                    <th>Video</th>
                    <th>Link</th>
                    <th>Video visible on About page</th>
                    
                </tr>
                <%for(let i=0;i<vdo.length;i++){%>
                    <tr>
                        <td></td>
                        <td><%-i+1%></td>
                        <td><iframe height="450px" width="300px" src="<%-vdo[i].video%>"></iframe></td>
                        <td><%-vdo[i].video%></td>
                        <td><div class="w-100 input-group">
                            <form method="post"class="input-group" action="/admin/update_video_visiblity/<%-vdo[i]._id%>">
                            <select class="form-control " name="showAbout" required>
                                <option <%-(vdo[i].showAbout==false)?'selected':''%> value="false">Hide</option>
                                <option <%-(vdo[i].showAbout==true)?'selected':''%> value="true">Show</option>
                            </select>
                            <button type="submit" class="btn btn-primary"><i class="fa fa-upload"></i></button>
                        </form>
                        </div>
                    
                        </td>
                    </tr>
                    
                    <%}%>
             </table>
            </div>
        </div>
    </div>
</div>
<%-include('footer.ejs')%>