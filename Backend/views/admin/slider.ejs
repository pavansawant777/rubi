<%-include('header.ejs')%>
<div class="container p-5">
    <div class="row p-5 justify-content-center align-item-center">
        <div class="col-md-5 rounded shadow p-4">
         <h2 class="text-center">Add Slider</h2>
         <form method="post" enctype="multipart/form-data" action="/admin/add-slider">
            <label class="mb-2">Image :</label>
            <input type="file"   name="img" required class="form-control mb-3"/>
            <label class="mb-2">Title :</label>
            <input type="text" class="form-control mb-3" name="title" required/>
            <button class="btn btn-primary mt-2 w-100" type="submit">Save</button>
         </form>
        </div>
    </div>
    <div class="row p-5">
    <div class="col-md-12">
        <table class="table table-striped table-bordered">
            <tr>
                <th></th>
                <th>Srno</th>
                <th>Image</th>
                <th>Title</th>
                <th></th>
            </tr>
            <%for(let i=0;i<slider.length;i++){%>
                <tr>
                    <td><a href="/admin/delete-slider/<%-slider[i]._id%>" class="text-danger"><i class="fa fa-trash"></i></a></td>
                    <td><%-i+1%></td>
                    <td><img src="/images/<%-slider[i].image%>" style="width: 150px;height: 100px;"></td>
                    <td>
                        <form action="/admin/update-slider/<%-slider[i]._id%>" method="post">
                        <input type="text" placeholder="title" class="form-control" name="title" value="<%-slider[i].title%>" required/></td>
                    <td><button class="btn btn-primary" type="submit"><i class="fa fa-upload"></i></button>
                    </form>
                    </td>
                </tr>
                
                
                <%}%>
        </table>
    </div>
    </div>
</div>
<%-include('footer.ejs')%>