<%-include('header.ejs')%>
<div class="conatiner pt-5 ">
    <div class="row w-75 p-4 rounded shadow" style="margin:5% auto ;">
        <div class="col-md-12 text-center mb-4">
            <h1>Team Member Details</h1>
        </div>
     <div class="col-md-5">
        <img src="/images/<%-member.image%>" style="height: 200px; width: 200px; border-radius: 50%;">
        <br><br>
        <form action="/admin/update-member/<%-member._id%>" method="post" enctype="multipart/form-data">
        <label class="mb-2">Change Profile Image :</label>
        <input type="file" name="pfp" class="form-control" required value="<%-member.image%>" >
     </div>
     <div class="col-md-7">
        <div class="row">
            <div class="col-md-6">
                <label class="mb-2">Member Name:</label>
                <input type="text" name="name" class="form-control" required value="<%-member.name%>">
            </div>
            <div class="col-md-6">
                <label class="mb-2">Member Designation:</label>
                <input type="text" name="designation" class="form-control" required value="<%-member.designation%>">
            </div>
            <div class="col-md-6 mt-3">
                <label class="mb-2">Instagram Link:</label>
                <input type="url" name="instagram" class="form-control" required value="<%-member.instagram%>">
            </div>
            <div class="col-md-6 mt-3">
                <label class="mb-2">Whatsapp No.:</label>
                <input type="number" name="whatsapp" class="form-control" required value="<%-member.whatsapp%>">
            </div>
            <div class="col-md-6 mt-3">
                <label class="mb-2">Facebook Link:</label>
                <input type="url" name="facebook" class="form-control" required value="<%-member.facebook%>">
            </div>
            
           
        </div>
     </div>
     <div class="col-md-12 mt-4 text-center ">
       <button type="submit" class="btn btn-primary">Update Details</button>
    </form>
    </div>
    </div>
</div>
<%-include('footer.ejs')%>