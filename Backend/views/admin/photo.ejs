<%-include('header.ejs')%>
<div class="container p-5">
    <div class="row p-5 justify-content-center align-item-center">
<div class="col-md-6 rounded shadow p-4">
    <div class="row">
        <h3 class="text-center">Add Image</h3>
        <div class="col-12 mt-4">
            <form method="post" action="/admin/save-image" enctype="multipart/form-data">
            <label class="mb-2">Image Title :
            </label>
                            <input class="form-control" name="title" required  />

        </div>
          <div class="col-12 mt-4">
            <label class="mb-2">Image Category :
            </label>
                            <select class="form-control" name="category" required>
                                <option value="" disabled selected>Select image category</option>
                                <%for(let i=0;i<cats.length;i++){%>
                                    <option value="<%-cats[i]._id%>"><%-cats[i].category%></option>
                                    <%}%>
                            </select>

        </div>
          <div class="col-12 mt-3">
            <label class="mb-2">Image  :
            </label>
                            <input class="form-control" type="file" name="image" required  />

        </div>
        <div class="col-12 mt-3 text-center">
            <button class="btn btn-primary" type="submit">Save</button>
        </form>
        </div>
    </div>
</div>
    </div>
    <div class="row mt-5">
        <div class="col-12 p-5">
            <table class="table table-striped table-bordered">
                <tr>
                    <th></th>
                    <th>Srno</th>
                    <th>Image</th>
                    <th>Name</th>
                  
                    <th>Show home</th>
                    <th>Category</th>
                    <th>Action</th>
                </tr>
                <%for(let i=0;i<imgs.length;i++){%>
                <tr>
                    <td><a href="/admin/delete-img/<%-imgs[i]._id%>" class="text-danger"><i class="fa fa-trash"></i></a></td>
                <td><%-i+1%></td>
                <td><img src="/images/<%-imgs[i].image%>" style="height: 70px; width: 150px;"></td>
                <td>
                    <form method="post" action="/admin/update-image-name/<%-imgs[i]._id%>">
                <input value="<%-imgs[i].title%>" required placeholder="Image title" name="title" class="form-control">
                </td>
                <td>
                    <select class="form-control" name="showHome" required>
                  
                     
                            <option <%-(imgs[i].showHome==true)?'selected':''%> value="true">show</option>
                            <option <%-(imgs[i].showHome==false)?'selected':''%> value="false">hide</option>
                           
                    </select>   
                </td>
                <td>
                    <select class="form-control" name="category" required>
                        <option value="" disabled selected>Select image category</option>
                        <%for(let j=0;j<cats.length;j++){%>
                            <option <%-(cats[j]._id==imgs[i].category)?'selected':''%> value="<%-cats[j]._id%>"><%-cats[j].category%></option>
                            <%}%>
                    </select>   
                </td>
                <td>
                    <button class="btn btn-sm btn-primary" type="submit"><i class="fa fa-upload"></i></button>
                </form>
                </td>
                </tr>
                <%}%>
            </table>
        </div>
    </div>
</div>

<%-include('footer.ejs')%>