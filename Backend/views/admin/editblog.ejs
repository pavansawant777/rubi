<%-include('header.ejs')%>
<div class="container p-5">
    <div class="row p-5">
        <div class="col-lg-12 rounded shadow p-5 bg-light">
            <div class="w-100 text-center mb-5">
                <h2>Edit Blog</h2>
            </div>
            <div class="row">
    <div class="col-lg-6">
                <div class="row">
                    <div class="col-12 p-4">
                        <img src="/images/<%-blog.image%>" style="height: 250px;" class="w-100 rounded"/>
                    </div>
                    <div class="col-12 p-4">
                        <form action="/admin/update-blog-img/<%-blog._id%>" method="post" enctype="multipart/form-data">
                            <div class="input-group">
                                <input class="form-control" name="image" required type="file"><button class="btn btn-primary">submit</button> 
                            </div>
                        </form>
                    </div>
                 
                </div>
            </div>
            <div class="col-lg-6">
                <div class="row">
                    <form method="post" action="/admin/update-blog-info/<%-blog._id%>">
                    <div class="col-12 mb-3">
                        <label class="mb-2">Title</label>
                        <input class="form-control" type="text" name="title" required value="<%-blog.title%>">
                    </div>
                      <div class="col-12 mb-3">
                        <label class="mb-2">Writer</label>
                        <input class="form-control" type="text" name="writer" required value="<%-blog.writer%>">
                    </div>
            
                    <div class="col-12 mb-3">
                        <label class="mb-2">Show blog on home page</label>
                        <select class="form-control" name="showHome" required>
                           
                           
                                <option <%-(blog.showHome==true)?'selected':''%> value="true">Show</option>
                                <option <%-(blog.showHome==false)?'selected':''%> value="false">Hide</option>
                               
                        </select>
                    </div>
                    <div class="col-12 mb-3">
                        <label class="mb-2">Details</label>
                        <textarea class="form-control" id="editor1" rows="5" required name="details">
                            <%-blog.details%>
                        </textarea>
                    </div>
                    <div class="col-12 mt-3">
                        <button class="btn btn-primary w-100" type="submit">Save</button>
                    </div>
                    </form>
                </div>
            </div>
            </div>
        
        </div>
    </div>
</div>
<script>
    var editor = CKEDITOR.replace( 'editor1' );

// The "change" event is fired whenever a change is made in the editor.
editor.on( 'change', function( evt ) {
    // getData() returns CKEditor's HTML content.
  console.log( 'This is what you typed ' + evt.editor.getData() + typeof evt.editor.getData() );
    console.log( 'Total bytes: ' + evt.editor.getData().length );
  $('#hiddedn input').val(evt.editor.getData());
});
</script>
<%-include('footer.ejs')%>