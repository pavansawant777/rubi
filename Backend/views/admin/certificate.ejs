<%-include('header.ejs')%>
<div class="container">
    <div class="row justify-content-center align-item-center">
        <div class="col-md-5 p-4 rounded shadow bg-white">
          <h3 class="text-center">Add Certificate</h3>
          <form method="post" action="/admin/save-certi" enctype="multipart/form-data">
            <label class="mb-2">Image :</label>
            <input type="file" required name="img" class="form-control mb-3">
            <label class="mb-2">Title :</label>
            <input type="text" class="form-control" required name="title">
            <div class="w-100 text-center">
            <button class="btn btn-primary mt-5" type="submit">Save</button>

            </div>
             
          </form>
        </div>
    </div>
    <div class="row p-5 mt-5">
        <div class="col-md-12">
            <table class="table table-striped table-bordered">
                <tr>
                    <th></th>
                    <th>Sr no</th>
                    <th>Image</th>
                    <th>Title</th>
                    <th>Visible</th>
                    <th></th>
                </tr>
                <%for(let i=0;i<certi.length;i++){%>
                    <tr>
                        <td><a href="/admin/delete-certi/<%-certi[i]._id%>" class="text-danger"><i class="fa fa-trash"></i></a></td>
                        <td><%-i+1%></td>
                        <td><img src="/images/<%-certi[i].image%>" style="height:100px; width: 150px;"></td>
                        <form method="post" action="/admin/update-certificate/<%-certi[i]._id%>">
  <td><input type="text" class="form-control" value="<%-certi[i].title%>" name="title" required/></td>
  <td>
<select class="form-control" required name="visible">
    <option <%-(certi[i].visible==true)?'selected':''%> value="true">Show</option>
    <option <%-(certi[i].visible==false)?'selected':''%> value="false">Hide</option>
</select>

  </td>
  <td><button class="btn btn-primary" type="submit"><i class="fa fa-upload"></i></button></td>
                        </form>
                      
                    </tr>
                    
                    <%}%>
            </table>
        </div>
    </div>
</div>
<%-include('footer.ejs')%>